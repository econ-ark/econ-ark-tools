\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{examquestions}[2023/06/01 Exam Questions and Answers Package]

% Required packages
\RequirePackage{ifthen}
\RequirePackage{xkeyval}

% Boolean for answers
\provideboolean{AnswersTF}
\setboolean{AnswersTF}{false}

% Boolean for exam questions
\provideboolean{ExamQ}
\setboolean{ExamQ}{false}

% Boolean for space between answers
\provideboolean{SpaceBetweenAnswers}
\setboolean{SpaceBetweenAnswers}{true}

% Command for conditional exam questions
\providecommand{\ifExamQuestion}{}
\renewcommand{\ifExamQuestion}{\ifthenelse{\boolean{ExamQ}}}

% Command for conditional space between answers
\providecommand{\AnswerOrBlankSpace}{}
\renewcommand{\AnswerOrBlankSpace}{\ifthenelse{\boolean{SpaceBetweenAnswers}}}

% Package options
\DeclareOptionX{Answers}{\setboolean{AnswersTF}{true}}
\ProcessOptionsX

% Command for conditional answers
\providecommand{\ifAnswers}{\ifthenelse{\boolean{AnswersTF}}}
\renewcommand{\ifAnswers}{\ifthenelse{\boolean{AnswersTF}}}

% Command for answers
\newcommand{\answer}[2]{%
  \ifAnswers{%
    \textit{Answer:}
    \begin{quote}
      #1
    \end{quote}
  }{#2}%
}

\endinput
